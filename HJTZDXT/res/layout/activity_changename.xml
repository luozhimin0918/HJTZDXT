<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/self_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/zx_zt_color"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="?attr/flash_top"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/changename_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="13dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="?attr/changepwd_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/zx_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改昵称"
            android:textColor="?attr/rl_tv"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="?attr/line_color" />

    <EditText
        android:id="@+id/changename_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/flash_blow_bg"
        android:paddingLeft="20dp"
        android:textColor="?attr/flash_tv" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/line_color" />


    <Button
        android:id="@+id/changename_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/changpwd_btn_normal"
        android:text="确定"
        android:textSize="21sp"
        android:textColor="#fff" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"/>

</LinearLayout>