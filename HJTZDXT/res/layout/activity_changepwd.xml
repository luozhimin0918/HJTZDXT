<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/self_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/zx_zt_color"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="?attr/flash_top"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/changepwd_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="13dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="?attr/changepwd_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/zx_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="?attr/rl_tv"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/flash_blow_bg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/line_color" />

    <EditText
        android:id="@+id/changepwd_old"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/flash_blow_bg"
        android:paddingLeft="20dp"
        android:hint="当前密码"
        android:textColor="?attr/flash_tv" 
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="?attr/line_color" />

    <EditText
        android:id="@+id/changepwd_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/flash_blow_bg"
        android:hint="新密码"
        android:paddingLeft="20dp"
        android:textColor="?attr/flash_tv" 
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="?attr/line_color" />

    <EditText
        android:id="@+id/changepwd_re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/flash_blow_bg"
        android:hint="确定新密码"
        android:paddingLeft="20dp"
        android:textColor="?attr/flash_tv"
        android:inputType="textPassword" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/line_color" 
        />
    </LinearLayout>
    
    <TextView android:layout_width="330dp"
        android:layout_height="16dp"
        android:background="?attr/changepwd_tishi"
        android:text="提示：密码长度至少6个字符，最多32个字符"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="?attr/flash_tv"/>

    <Button
        android:id="@+id/changepwd_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/changpwd_btn_normal"
        android:text="确定"
        android:textSize="21sp"
        android:textColor="#fff" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="21dp"/>

</LinearLayout>