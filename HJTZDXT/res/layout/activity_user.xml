<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/self_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/zx_zt_color"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/flash_top"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/user_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="13dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="?attr/changepwd_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/zx_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="?attr/rl_tv"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/self_change_name"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="1dp"
            android:background="?attr/flash_blow_bg" >

            <TextView
                android:id="@+id/self_tv_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="修改昵称 "
                android:textColor="?attr/flash_tv" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/self_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textColor="?attr/flash_tv" />

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/enter" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/self_change_pwd"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="1dp"
            android:background="?attr/flash_blow_bg" >

            <TextView
                android:id="@+id/self_tv_fk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="修改密码"
                android:textColor="?attr/flash_tv" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:background="@drawable/enter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/self_ll_out"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:background="?attr/flash_blow_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/self_tv_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="安全退出"
                android:textColor="#e14545" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>